
{
  "entities": {
    "Institution": {
      "title": "Institution",
      "description": "Information about a school or institution registered in the system.",
      "type": "object",
      "properties": {
        "schoolName": {
          "type": "string",
          "description": "The official name of the school."
        },
        "adminEmail": {
          "type": "string",
          "format": "email",
          "description": "The email address of the school administrator."
        },
        "role": {
          "type": "string",
          "enum": ["admin"],
          "description": "User role for access control."
        }
      },
      "required": ["schoolName", "adminEmail", "role"]
    },
    "ParentProfile": {
      "title": "Parent Profile",
      "description": "Profile information for a parent or guardian.",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "admissionNumber": { "type": "string", "description": "Linked child's admission number." },
        "role": {
          "type": "string",
          "enum": ["parent"]
        }
      },
      "required": ["firstName", "lastName", "email", "role"]
    },
    "Student": {
      "title": "Student",
      "description": "Comprehensive student details including financial status and personal info.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "admissionNumber": { "type": "string" },
        "grade": { "type": "string" },
        "gender": { "type": "string", "enum": ["Male", "Female", "Other"] },
        "dob": { "type": "string", "format": "date" },
        "address": { "type": "string" },
        "parentName": { "type": "string" },
        "parentEmail": { "type": "string", "format": "email" },
        "parentPhone": { "type": "string" },
        "totalFees": { "type": "number" },
        "paidAmount": { "type": "number" },
        "status": {
          "type": "string",
          "enum": ["Paid", "Pending", "Balance"]
        },
        "background": { "type": "string" },
        "medicalNotes": { "type": "string" }
      },
      "required": ["name", "admissionNumber", "parentEmail", "totalFees"]
    },
    "Payment": {
      "title": "Payment",
      "description": "Record of a fee payment made via Paystack.",
      "type": "object",
      "properties": {
        "studentId": { "type": "string" },
        "admissionNumber": { "type": "string" },
        "amount": { "type": "number" },
        "currency": { "type": "string" },
        "reference": { "type": "string" },
        "status": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "email": { "type": "string", "format": "email" },
        "method": { "type": "string" }
      },
      "required": ["studentId", "amount", "reference", "status"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/institutions/{institutionId}": {
      "schema": "Institution",
      "description": "Stores institutional metadata and admin profiles."
    },
    "/parents/{parentId}": {
      "schema": "ParentProfile",
      "description": "Stores parent profile information."
    },
    "/students/{studentId}": {
      "schema": "Student",
      "description": "Global directory of students and their fee records."
    },
    "/payments/{paymentId}": {
      "schema": "Payment",
      "description": "Historical log of all automated fee payments."
    }
  }
}
